<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/background"
    tools:context=".flows.dictionary.ui.DictionaryFragment">

    <com.l4digital.fastscroll.FastScrollRecyclerView
        android:id="@+id/rvCards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        app:bubbleColor="@color/base_blue"
        app:bubbleTextColor="@color/background"
        app:handleColor="@color/base_blue"
        app:hideScrollbar="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showBubble="true"
        app:showTrack="true"
        app:trackColor="@color/scrollbar_background"
        app:bubbleSize="small" />


</androidx.constraintlayout.widget.ConstraintLayout>
